{
  "global": {
    "files": {
      "dist": "dist",
      "dest": "assets",
      "source": "src",
      "concatenator": "-"
    },
    "bot": {
      "name": "iAyeBot",
      "email": "iayebot@websemantics.ca",
      "url": "http://github.com/iayebot",
      "img": "https://avatars1.githubusercontent.com/u/18201639?v=3&amp;s=40"
    }
  },
  "template": [
    {
      "description": "Media files for use in Bitcoin Junk Removal",
      "source": "{{ global.files.source }}/logo.template",
      "dest": "{{ global.files.dest }}",
      "data": ["green-gradient", "blue-gradient", "grey-gradient", "grey-solid", "grey-outline"],
      "svg": {
        "dest": "svg"
      }
    }
  ],
  "html": {
    "dest": ".",
    "template": "{{ global.files.source }}/index.template",
    "filename": "index.html",
    "title": "Bitcoin Junk Removal. Logos",
    "description": "{{ package.description }}",
    "github_url": "{{& package.repository }}",
    "link": {
      "text": "Visit Website \u00bb",
      "url": "{{& package.repository.url }}"
    },
    "generated_by": {
      "text": "Generated by,",
      "name": "{{ global.bot.name }}",
      "url": "{{& global.bot.url }}",
      "img": "{{& global.bot.img }}"
    }
  },
  "data": {
    "default": {
      "name": "",
      "value": {
        "zoom": 0,
        "outline": false,
        "background": true,
        "coin_color": "#000000",
        "arrows_color": "#000000",
        "width": 1125,
        "height": 660,
        "line_1_text": "BITCOIN JUNK REMOVAL.COM",
        "line_2_text": "A NEW WAY TO GET RID OF JUNK",
        "line_1_color": "#fafafa",
        "line_2_color": "#222",
        "transform": "translate(0)"
      }
    },
    "green-gradient": {
      "children": ["default"],
      "value": {
        "coin_color": "#222",
        "arrows_color": "#222",
        "background_color_1": "#63973f",
        "background_color_2": "#77b44b",
        "line_2_color": "#222"
      }
    },
    "grey-gradient": {
      "children": ["default"],
      "value": {
        "coin_color": "#7f8c8d",
        "arrows_color": "#7f8c8d",
        "background_color_1": "#bdc3c7",
        "background_color_2": "#ecf0f1",
        "line_2_color": "#7f8c8d"
      }
    },
    "blue-gradient": {
      "children": ["default"],
      "value": {
        "coin_color": "#34495e",
        "arrows_color": "#34495e",
        "background_color_1": "#2980b9",
        "background_color_2": "#3498db",
        "line_2_color": "#34495e"
      }
    },
    "grey-solid": {
      "children": ["default"],
      "value": {
        "background": false,
        "coin_color": "#95a5a6",
        "arrows_color": "#95a5a6",
        "line_1_color": "#95a5a6",
        "line_2_color": "#95a5a6"
      }
    },
    "grey-outline": {
      "children": ["grey-solid"],
      "value": {
        "outline": true
      }
    }
  }
}
